  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "license": "MIT",
  "scripts": {
    "build:demo": "yarn clean:demo && cross-env NODE_ENV=production webpack --config webpack.config.demo.js -p --bail",
    "clean:demo": "rimraf build",
    "lint": "eslint ./source/**/*.js",
    "format": "prettier --write ./source/**/*.js",
    "format:diff": "prettier --list-different ./source/**/*.js",
